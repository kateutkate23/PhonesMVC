@model List<PhonesMVC.Models.AppUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users list</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Description</td>
                <td>
                    <form asp-area="" asp-controller="Users" asp-action="Delete" method="post">
                        <input type="hidden" name="Id" value="@user.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>