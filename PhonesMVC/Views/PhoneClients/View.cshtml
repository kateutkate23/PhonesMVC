@model PhonesMVC.ViewModels.UpdatePhoneClientVM

@{
    ViewData["Title"] = "View";
}

<h1>Edit phone client</h1>
<form method="post" action="View" class="mt-3">
    <div class="mb-3">
        <label for="exampleInputEmail1">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Surname</label>
        <input type="text" class="form-control" asp-for="Surname">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Birth date</label>
        <input type="date" class="form-control" asp-for="BirthDate">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Phone</label>
        <input type="text" class="form-control" asp-for="Phone">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" asp-action="Delete" asp-controller="PhoneClients" class="btn btn-danger">Delete</button>
</form>